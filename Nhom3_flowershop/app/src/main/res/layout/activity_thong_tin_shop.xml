<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ThongTinShopActivity"
    android:orientation="vertical"
    android:background="@color/maunen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.4"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="@color/toolbar">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:layout_gravity="center|left"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="THÔNG TIN SHOP"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/mauchu"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:src="@drawable/ic_baseline_home_work_24"
            android:layout_marginVertical="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:text="Tên shop: NHOM3 Flower Shop"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:src="@drawable/ic_baseline_phone_in_talk_24"
            android:layout_marginVertical="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:text="Điện thoại: 0 394 209 233"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:src="@drawable/ic_baseline_mail_24"
            android:layout_marginVertical="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:text="Email: FlowerShopNhom3@gmail.com"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="Chào mừng đến với Flower Shop - nơi tuyệt vời để khám phá và trải nghiệm những loại hoa đẹp nhất. Với sự tận tâm và am hiểu sâu sắc về nghệ thuật của hoa, chúng tôi cam kết cung cấp những sản phẩm hoa tươi và chất lượng nhất cho khách hàng."
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:src="@drawable/ic_baseline_place_24"
            android:layout_marginVertical="2dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:text="Địa chỉ: Km10, Trần Phú, P. Mộ Lao, Q. Hà Đông, Tp. Hà Nội"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="0dp"
    android:layout_weight="0.6"
    android:layout_marginTop="10dp">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.ThongTinShopActivity" />
</RelativeLayout>
</LinearLayout>

